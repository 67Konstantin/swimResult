<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Введите данные о заплыве:"
        android:textSize="18sp" />
    <LinearLayout
        android:id="@+id/llName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:gravity="center"
        android:layout_marginTop="8dp">
    <EditText
        android:id="@+id/editTextSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Фамилия"
        android:inputType="textPersonName"
        android:layout_marginRight="12dp"
        android:text="123"/>

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextSurname"
        android:layout_centerHorizontal="true"
        android:hint="Имя"
        android:inputType="textPersonName"
        android:text="123"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llGrTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llName"
        android:gravity="center">
    <EditText
        android:id="@+id/editTextBirthYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:hint="г.р."
        android:inputType="number"
        android:layout_marginRight="12dp"
        android:text="123"/>

    <EditText
        android:id="@+id/editTextTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextBirthYear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:hint="Время"
        android:inputType="numberDecimal"
        android:digits="0123456789."/>
    </LinearLayout>
    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/llGrTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:onClick="onAddButtonClick"
        android:text="Добавить" />

    <LinearLayout
        android:id="@+id/llsearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/buttonAdd"
        android:layout_marginTop="8dp"
        android:gravity="center">

        <EditText
            android:id="@+id/editTextSearchYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="Поиск по году рождения"
            android:inputType="number"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextSearchYear"
            android:layout_centerHorizontal="true"
            android:onClick="onSearchButtonClick"
            android:text="Найти" />
    </LinearLayout>
    <Button
        android:id="@+id/buttonClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/llsearch"
        android:layout_marginTop="8dp"
        android:text="Очистить список"
        android:layout_centerHorizontal="true"
        android:onClick="onClearButtonClick" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonClear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

</RelativeLayout>
